<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.service.TestServiceActivity">

    <Button
        android:id="@+id/startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="开始服务"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="停止服务"
        app:layout_constraintBottom_toBottomOf="@+id/startService"
        app:layout_constraintLeft_toRightOf="@+id/startService"
        app:layout_constraintTop_toTopOf="@+id/startService" />

    <Button
        android:id="@+id/lock_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="锁定service"
        app:layout_constraintLeft_toLeftOf="@+id/startService"
        app:layout_constraintTop_toBottomOf="@+id/startService" />

    <Button
        android:id="@+id/unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="解锁"
        app:layout_constraintLeft_toLeftOf="@+id/lock_service"
        app:layout_constraintTop_toBottomOf="@+id/lock_service" />

    <Button
        android:id="@+id/status_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="获取service状态"
        app:layout_constraintLeft_toLeftOf="@+id/unlock"
        app:layout_constraintTop_toBottomOf="@+id/unlock" />
</android.support.constraint.ConstraintLayout>
